<!doctype html>
<html>
<head>
    <title>Coffee Shop</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <link rel="stylesheet" href="style.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">
</head>
<body>
<div class="container">

    <div class="page-header text-center white-text">
        <h1><span class="fa fa-anchor"></span>Barista</h1>
        <a href="/logout" class="btn btn-default btn-sm">Logout</a>
    </div>

    <div class="####">
      <div class="lists">
        <h2 class="white-text">Orders</h2>
        <ol class="white-text">
        <% for(var i=0; i<orders.length; i++) {%>
          <% if(orders[i].completed === false) {%>
          <li class="order text-size">
            <span><%= orders[i].customerName %></span>
            <span><%= orders[i].coffee %></span>
            <span><%= orders[i].toma %></span>
            <span><i class="fas fa-check" aria-hidden="true"></i></span>
            <span><i class="fa fa-times" aria-hidden="true"></i></span>
          </li>
          <% } %>
        <% } %>
      </ol>
      </div>
      <div class="lists">
        <h2 class="white-text">Completed</h2>
        <ul class="white-text">
        <% for(var i=0; i<orders.length; i++) {%>
           <% if(orders[i].completed === true) {%>
          <li class="order text-size">
            <span><%= orders[i].customerName %></span>
            <span><%= orders[i].coffee %></span>
            <span><%= orders[i].toma %></span>
            <span><i class="fa fa-times" aria-hidden="true"></i></span>
          </li>
          <% } %>
        <% } %>
        </ul>
      </div>
    </div>




</div>

<script src="main.js"></script>

</body>
</html>
